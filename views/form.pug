extends layoutProcess

block content
    -data = data || {}
    if errors
        ul
        for error in errors
            li= error.msg
    
    form(action="/process" method="POST" class="form-registration")
        label(for="input") Paraula a encriptar: 
        input(
            type="text"
            id="input"
            name="input"
            class="form-control"
            value=data.input
        )
        input(
            type="submit" 
            name="submit"
            value="Submit"
            class="btn btn-lg btn-primary btn-block")
    form(action="/registrations" method="GET" class="form-registration")
        input(
            type="submit"
            value="Veure Historial"
            class="btn btn-lg btn-warning btn-block"
        )
    form(action="/registrationsJSON" method="GET" class="form-registration")
        input(
            type="submit"
            value="Veure Historial JSON"
            class="btn btn-lg btn-warning btn-block"
        )